<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sysmanager</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123456</property>
    <mapping resource="br/com/sysmanager/model/UnidadeMedida.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Cargo.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/GrupoProduto.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/TipoEndereco.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/TipoTelefone.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Marca.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Cartao.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Fornecedor.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Produto.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Departamento.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/KitsProdutos.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/Kit.hbm.xml"/>
    <mapping resource="br/com/sysmanager/model/FornecedoresProdutos.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
